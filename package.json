  },
  "type": "module",
  "scripts": {
    "check": "oxlint && oxfmt --write",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @servify/db db:push",
    "db:studio": "turbo -F @servify/db db:studio",
    "db:generate": "turbo -F @servify/db db:generate",
    "db:migrate": "turbo -F @servify/db db:migrate",
    "db:start": "turbo -F @servify/db db:start",
    "db:watch": "turbo -F @servify/db db:watch",
    "db:stop": "turbo -F @servify/db db:stop",
    "db:down": "turbo -F @servify/db db:down"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "oxlint": "^1.34.0",
    "oxfmt": "^0.19.0",
    "typescript": "catalog:",
    "@types/bun": "catalog:"
  },
  "packageManager": "bun@1.3.4"
}

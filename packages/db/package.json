    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@t3-oss/env-core": "catalog:t3-oss",
    "drizzle-orm": "catalog:",
    "pg": "^8.16.3",
    "zod": "catalog:"

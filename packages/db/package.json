{
  "name": "@servify/db",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.ts",
    "./env": "./env.ts"
  },
  "scripts": {
    "db:push": "bun with-env bun drizzle-kit push",
    "db:generate": "bun with-env bun drizzle-kit generate",
    "db:studio": "bun with-env bun drizzle-kit studio",
    "db:migrate": "bun with-env bun drizzle-kit migrate",
    "db:start": "bun with-env bun docker compose up -d",
    "db:watch": "bun with-env bun docker compose up",
    "db:stop": "bun with-env bun docker compose stop",
    "db:down": "bun with-env bun docker compose down",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@t3-oss/env-core": "catalog:t3-oss",
    "drizzle-orm": "catalog:",
    "pg": "^8.16.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@servify/config": "workspace:*",
    "@types/pg": "catalog:",
    "dotenv-cli": "catalog:",
    "drizzle-kit": "^0.31.8",
    "typescript": "catalog:"
  }
}
